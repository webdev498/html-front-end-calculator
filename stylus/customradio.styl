/* The container */
.selection-container
    display flex
    margin-bottom 20px

.checkbox-container 
    display  block 
    position  relative 
    padding-left  35px 
    margin-bottom  12px 
    cursor  pointer 
    font-size  16px 
    -webkit-user-select  none 
    -moz-user-select  none 
    -ms-user-select  none 
    user-select  none 
    &:hover input ~ .checkmark 
        background-color $gray-white
        border none

    input 
        position  absolute 
        opacity  0 
        cursor  pointer
        &:checked ~ .checkmark 
            background-color $green
            border none
            &:after
                display  block

    .checkmark 
        position  absolute 
        top  0 
        left  0 
        height  25px 
        width  25px 
        border-radius  50% 
        border: 1px solid $blue-lighter;
        &:after 
            content  "" 
            position  absolute 
            display  none 
            top 4px
            left 9px
            width 8px
            height 13px
            border solid white
            border-width 0 3px 3px 0
            -webkit-transform rotate(45deg)
            -ms-transform rotate(45deg)
            transform rotate(45deg)

    